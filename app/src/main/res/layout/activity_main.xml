<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pinyin.liusirui.testdemo.MainActivity">

    <LinearLayout
        android:id="@+id/container"
        android:layout_margin="10px"
        android:padding="5px"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/py_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/py_user"
            android:textColor="#fff"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/py_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="@string/py_userhint"
            android:textSize="20dp"
            android:background="@mipmap/username"/>

        <TextView
            android:id="@+id/py_pass"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/py_pass"
            android:textSize="16dp" />


    <EditText
        android:id="@+id/py_user_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:password="true"
        android:hint="@string/py_passhint"
        android:textSize="20dp"
        android:background="@mipmap/password"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30px"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/login"
            android:layout_margin="2px"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:background="@mipmap/button"/>
        <Button
            android:id="@+id/reg"
            android:layout_margin="2px"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:background="@mipmap/button"/>
    </LinearLayout>
</LinearLayout>
